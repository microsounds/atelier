#!/usr/bin/env sh

unset opt

# disable hardware acceleration on chromebooks
read -r vendor < /sys/devices/virtual/dmi/id/sys_vendor
case $vendor in
	GOOGLE) opt="$opt --disable-gpu-compositing";;
esac

# redirect cache writes to ramdisk
/usr/bin/chromium $opt --disk-cache-dir="$XDG_CACHE_HOME/${0##*/}" "$@"
