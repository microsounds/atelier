#!/usr/bin/env sh

# usage: genshin-impact [-l]
# install and/or launch Genshin Impact under Wine 5.3 or later
# use '-l' flag to run the official launcher (for updates, etc.)
# some warnings:
# - requires over 170GiB of available free space in ~/.local/opt
# - do NOT launch the game using the official launcher
# - linux patches violate miHoYo terms of service, you might get banned

PATCH_VER='440'
INSTALL_DIR="$HOME/.local/opt/genshin-impact"
LAUNCHER='drive_c/Program Files/Genshin Impact/launcher.exe'
GAME_FILES="${LAUNCHER%/*}/Genshin Impact Game"
DPY_RES="$(xrandr -q | grep '[^dis]connected' \
	| egrep -o '([0-9]+x?)+' | fgrep 'x' | head -n 1)"

# external downloads
WINETRICKS='https://raw.githubusercontent.com/Winetricks/winetricks/master/src/winetricks'
INSTALLER='https://ys-api-os.mihoyo.com/event/download_porter/link/ys_global/genshinimpactpc/default'
LINUX_PATCH='https://notabug.org/Krock/dawn'

# require wine-stable from wine-hq repos
# require at least wine 5.3
export PATH="/opt/wine-stable/bin:$PATH"
export WINE='wine64'
export WINEPREFIX="$INSTALL_DIR"
WINE_VER='5.3'
$WINE --version || { echo "Install wine-stable."; exit 1; }
$WINE --version | tr '-' '\t' | cut -f2 | while read -r ver; do
	[ $(echo "${ver%.*} >= $WINE_VER" | bc) -eq 1 ] && break
	echo "Wine version too old, install $WINE_VER or later."
	kill -- $$
done

# download additional components if required
[ -d "$INSTALL_DIR" ] || $WINE wineboot -u

# first-run, download required files interactively
if [ ! -f "$INSTALL_DIR/$GAME_FILES/launcher.bat" ]; then
	user-confirm 'Install Genshin Impact (170GB free space required)' || exit 1
	for f in "$WINETRICKS" "$INSTALLER"; do
		if [ ! -f "$INSTALL_DIR/${f##*/}" ]; then
			wget -P "$INSTALL_DIR" "$f" || exit 1
		fi
	done

	# winetricks
	# DXVK v1.9.0 required
	# in-game browser fonts
	# mouse sensitivity issues
	for f in dxvk190 corefonts 'usetakefocus=n'; do
		sh "$INSTALL_DIR/${WINETRICKS##*/}" "$f"
	done

# follow prompts and install game when prompted, do not launch the game
	xmessage -default okay \
		'Download and install the official launcher when prompted.
IMPORTANT: Exit without launching the official launcher. Do NOT select "RUN NOW".'
	sleep 2
	$WINE "$INSTALL_DIR/${INSTALLER##*/}"

	xmessage -default okay \
		'Download and install the official game files to the default location when prompted.
IMPORTANT: Exit without launching the game. Do NOT use the official launcher to run the game.'
	sleep 2
	$WINE "$INSTALL_DIR/$LAUNCHER"
fi

# download and apply linux patches
[ -d "$INSTALL_DIR/patch" ] || git clone "$LINUX_PATCH" "$INSTALL_DIR/patch"
git -C "$INSTALL_DIR/patch" pull

# copy over launcher script
cp -fv "$INSTALL_DIR/patch/$PATCH_VER/patch_files/launcher.bat" "$INSTALL_DIR/$GAME_FILES"

cd "$INSTALL_DIR/$GAME_FILES"
for f in patch patch_anti_logincrash; do
	yes y | bash "$INSTALL_DIR/patch/$PATCH_VER/$f.sh"
done

case "$1" in
	'-l' ) $WINE "$INSTALL_DIR/$LAUNCHER";;
	*) $WINE explorer /desktop="${0##*/},$DPY_RES" cmd /c "$INSTALL_DIR/$GAME_FILES/launcher.bat"
esac
