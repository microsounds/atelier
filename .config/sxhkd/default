# ~/.config/sxhkd/default: sxhkd user configuration

# reload config
super + Escape
	pkill -USR1 -x sxhkd

# terminal
super + Return
	urxvtc
# file manager
super + e
	pcmanfm
# task manager
ctrl + alt + Delete
	visual htop

# power
{_,shift +} super + F{1,2}
	systemctl {poweroff,reboot,suspend,hibernate}
# display off
{super + F3,XF86ScreenSaver}
	sleep 1; xset dpms force off
# switch displays
{super + F5,XF86Display}
	~/Scripts/xrandr_cycle.sh
# brightness
{_,shift +} super + F{6,7}
	xbacklight -{dec 10,set 1,inc 10,set 100}
{_,shift +} XF86MonBrightness{Down,Up}
	xbacklight -{dec 10,set 1,inc 10,set 100}
# audio
super + F{8,9,10}
	amixer -q sset Master {toggle,5%-,5%+}
XF86Audio{Mute,LowerVolume,RaiseVolume}
	amixer -q sset Master {toggle,5%-,5%+}
