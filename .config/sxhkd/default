## ~/.config/sxhkd/default: wm-independent keybinds

#include <theme.h>
#include <colors/nightdrive.h>

# terminate X session
ctrl + shift + q
	pkill X

# launcher
super + p
	dmenu_path | dmenu -f \
		-fn str(font(FN_HEADER, FN_HEADER_SIZE)) \
		-nb str(BGCOLOR) -sb str(FGLIGHT) \
		-nf str(FGCOLOR) -sf str(FGCOLOR) \
	| sh
# terminal
super + Return
	urxvtc || urxvt
# file manager
{super + e,XF86Explorer}
	pcmanfm

# browser
XF86WWW
	chromium
# task manager
ctrl + alt + Delete
	visual htop
# screenshots (add delay for interactive mode)
{_,shift +} Print
	{scrot,sleep 0.2; scrot -s}

# power
{_,shift +} super + F{1,2}
	systemctl {poweroff,reboot,suspend,hibernate}
# display off
{super + F3,XF86ScreenSaver}
	sleep 1; xset dpms force off
# calculator
{super + F4,XF86Calculator}
	visual orpie
# switch displays
{_,shift +} {super + F5,XF86Display}
	{xrandr-cycle,arandr}
# brightness
{_,shift +} super + F{6,7}
	xbacklight -{dec 10,set 1,inc 10,set 100}
{_,shift +} XF86MonBrightness{Down,Up}
	xbacklight -{dec 10,set 1,inc 10,set 100}
# audio
shift + super + {F8,XF86AudioMute}
	pavucontrol
super + F{8,9,10}
	amixer -q sset Master {toggle,5%-,5%+}
XF86Audio{Mute,LowerVolume,RaiseVolume}
	amixer -q sset Master {toggle,5%-,5%+}
# randomize wallpaper
super + F11
	xwin-decor

# reserved for future use
# XF86Launch1
# XF86Tools
# X86FAudio{Stop,Play,Prev,Next}
