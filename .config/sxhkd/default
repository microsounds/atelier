# ~/.config/sxhkd/default: sxhkd user configuration

# reload config
super + Escape
	pkill -USR1 -x sxhkd

# terminal
super + Return
	urxvtc
# file manager
super + e
	pcmanfm
# task manager
ctrl + alt + Delete
	visual htop
# screenshots (add delay for interactive mode)
{_,shift +} Print
	{scrot,sleep 0.2; scrot -s}

# power
{_,shift +} super + F{1,2}
	systemctl {poweroff,reboot,suspend,hibernate}
# display off
{super + F3,XF86ScreenSaver}
	sleep 1; xset dpms force off
# switch displays
{_,shift +} {super + F5,XF86Display}
	{~/Scripts/xrandr_cycle.sh,arandr}
# brightness
{_,shift +} super + F{6,7}
	xbacklight -{dec 10,set 1,inc 10,set 100}
{_,shift +} XF86MonBrightness{Down,Up}
	xbacklight -{dec 10,set 1,inc 10,set 100}
# audio
shift + super + {F8,XF86AudioMute}
	pavucontrol
super + F{8,9,10}
	amixer -q sset Master {toggle,5%-,5%+}
XF86Audio{Mute,LowerVolume,RaiseVolume}
	amixer -q sset Master {toggle,5%-,5%+}
# randomize wallpaper
super + F11
	~/Scripts/xwin_decor.sh
