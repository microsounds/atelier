# ~/.config/sxhkd/default: sxhkd user configuration

# reload config
super + Escape
	pkill -USR1 -x sxhkd

# terminal
super + Return
	urxvtc
# file manager
super + e
	pcmanfm
# task manager
ctrl + alt + Delete
	visual htop

# shutdown/reboot
super + {_,shift +} F1
	systemctl {poweroff,reboot}
# suspend/hibernate
super + {_,shift +} F2
	systemctl {suspend,hibernate}
# display off
{super + F3,XF86ScreenSaver}
	sleep 1; xset dpms force off
# switch displays
{super + F5,XF86Display}
	~/Scripts/xrandr_cycle.sh
# brightness
super + F{6,7}
	xbacklight -time 50 -{dec,inc} 10
XF86MonBrightness{Down,Up}
	xbacklight -time 50 -{dec,inc} 10
# audio
super + F{8,9,10}
	amixer -q sset Master {toggle,5%-,5%+}
XF86Audio{Mute,LowerVolume,RaiseVolume}
	amixer -q sset Master {toggle,5%-,5%+}
